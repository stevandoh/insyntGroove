<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.johnny.insytgroove">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".AppController"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.SigninActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.DashboardActivity"
                android:label="@string/title_activity_dashboard"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activities.PostListActivity"
                android:label="@string/title_activity_post_list"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activities.CommentListActivity"
                android:label="@string/title_activity_comment_list"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activities.CreateCommentActivity"
                android:label="@string/title_activity_create_comment"
                android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>