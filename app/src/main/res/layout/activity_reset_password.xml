<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ResetPasswordActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginPageBackgroundColor">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingTop="16dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_current_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Shrine.TextInputLayout"

                    app:passwordToggleContentDescription="Toggle Password"
                    app:passwordToggleDrawable="@drawable/ic_toggle_pass"
                    app:passwordToggleEnabled="true"
                        android:hint="Enter your current password"
                    app:passwordToggleTint="@android:color/black">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_current_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Shrine.TextInputLayout"

                    app:passwordToggleContentDescription="Toggle Password"
                    app:passwordToggleDrawable="@drawable/ic_toggle_pass"
                    app:passwordToggleEnabled="true"
                        android:hint="Enter your new password"
                    app:passwordToggleTint="@android:color/black">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Shrine.TextInputLayout"
                    app:passwordToggleContentDescription="Toggle Password"
                    app:passwordToggleDrawable="@drawable/ic_toggle_pass"
                    app:passwordToggleEnabled="true"
                        android:hint="Confirm your new password"
                    app:passwordToggleTint="@android:color/black">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Change password"
                    android:textColor="@color/md_white_1000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ti_confirm_pwd"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/btnCreateAd"
                        style="@style/Widget.Shrine.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/button_create_add"/>

                <!--<com.google.android.material.button.MaterialButton-->
                <!--android:id="@+id/btnSignup"-->
                <!--style="@style/Widget.Shrine.Button.TextButton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="12dp"-->
                <!--android:layout_marginRight="12dp"-->
                <!--android:layout_toStartOf="@id/btnSignin"-->
                <!--android:layout_toLeftOf="@id/btnSignin"-->
                <!--android:text="@string/button_signup" />-->

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>